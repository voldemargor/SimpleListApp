<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleListApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/main_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextFolderName">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:textColor">@color/text_item_enabled</item>
    </style>

    <style name="Text.Item.Name.Disabled" parent="TextFolderName">
        <item name="android:textColor">@color/text_item_disabled</item>
    </style>

    <style name="Text.Folder.Count" parent="TextFolderName">
        <item name="android:textColor">@color/text_folder_count</item>
    </style>


    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:backgroundTint">@color/btn_green_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_item_disabled</item>
    </style>

    <style name="FolderMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/folder_menu_slide_in</item>
        <item name="android:windowExitAnimation">@anim/folder_menu_slide_out</item>
    </style>

</resources>